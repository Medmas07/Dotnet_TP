@model WebApplication1.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<h2 style="text-align:center; margin-bottom:30px;">Movie Details</h2>

<div style="display:flex; justify-content:center;">
    <div style="
        width:40%;
        padding:30px;
        border-radius:10px;
        box-shadow:0 4px 10px rgba(0,0,0,0.1);
        background-color:white;
    ">

        <div style="margin-bottom:15px;">
            <strong style="display:inline-block; width:100px;">Id :</strong>
            <span>@Model.Id</span>
        </div>

        <div style="margin-bottom:20px;">
            <strong style="display:inline-block; width:100px;">Name :</strong>
            <span>@Model.Name</span>
        </div>

        <div style="text-align:center;">
            <a href="/Movie/Index"
               style="
                    text-decoration:none;
                    background-color:#28a745;
                    color:white;
                    padding:8px 16px;
                    border-radius:5px;
               ">
                Back to List
            </a>
        </div>

    </div>
</div>